. ../../config.sub
. ../../vars.sh

LIBRARIES=libjob

libjob_CXXFLAGS="-include ../../config.h -I../../vendor -fPIC -std=c++11 -Wall -Werror -isystem /usr/local/include $kqueue_CFLAGS"
libjob_LDFLAGS="-L/usr/local/lib -fPIC"
libjob_LDADD="$kqueue_LDADD"
libjob_SOURCES=`ls *.cpp | tr '\n' ' '`
libjob_SONAME="libjob.so.0"
libjob_DEPENDS="$kqueue_DEPENDS"

uname=$(uname)
if [ $uname = 'FreeBSD' ] ; then 
    if [ "$check_program_docbook2mdoc" = "1" ] ; then
        custom_target 'job.5' 'job.5.xml' \ 
        'docbook2mdoc job.5.xml | mandoc -T man > job.5'
    
        custom_target 'job.5.html' 'job.5.xml' \ 
        'docbook2mdoc job.5.xml | mandoc -mdoc -T html > job.5.html'
    fi
elif [ $uname = 'Linux' ] ; then 
    docbook2x-man job.5.xml > job.5
    groff -mandoc -Thtml job.5 > job.5.html
fi


manpage 'job.5'

write_makefile
